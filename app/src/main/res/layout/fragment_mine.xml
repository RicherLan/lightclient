<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <lan.qxc.lightclient.ui.view.movingimage.MovingImageView
        android:id="@+id/moving_image_mine_frag"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/fragment_mine_pic"
        app:miv_load_on_create="true"
        app:miv_max_relative_size="3"
        app:miv_min_relative_offset="0.2"
        app:miv_start_delay="1000"
        app:miv_repetitions="-1"
        app:miv_speed="100" />


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_mine_frag"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="100dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_headic_mine_frag"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/default_icon"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_usernameq_mine_frag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="23sp"
                            android:text="">
                        </TextView>

                        <TextView
                            android:id="@+id/tv_intro_mine_frag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="19sp"
                            android:text="">
                        </TextView>
                </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <lan.qxc.lightclient.ui.view.BounceScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal"
                       android:layout_marginTop="30dp">
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:src="@drawable/ic_payment_black_24dp"
                           android:layout_marginLeft="20dp"
                           android:layout_gravity="center_vertical">
                       </ImageView>
                       <TextView
                           android:layout_gravity="center_vertical"
                           android:gravity="center_vertical"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="8"
                           android:layout_marginLeft="20dp"
                           android:textSize="16sp"
                           android:textColor="#000000"
                           android:text="我的钱包">
                       </TextView>

                       <ImageView
                           android:layout_gravity="center_vertical"
                           android:layout_width="0dp"
                           android:layout_height="25dp"
                           android:layout_weight="1"
                           android:src="@drawable/ic_chevron_right_black_24dp"
                           android:layout_marginRight="10dp"/>
                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_photo_size_select_actual_black_24dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:layout_marginLeft="20dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="我的相册">
                        </TextView>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_color_lens_black_24dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:layout_marginLeft="20dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="我的关注">
                        </TextView>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_mood_black_24dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:layout_marginLeft="20dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="我的粉丝">
                        </TextView>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_turned_in_black_24dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:layout_marginLeft="20dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="我喜欢的都在这里">
                        </TextView>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_settings_black_24dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:layout_marginLeft="20dp"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:text="设置">
                        </TextView>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:layout_width="0dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_chevron_right_black_24dp"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                </LinearLayout>

            </lan.qxc.lightclient.ui.view.BounceScrollView>


        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</FrameLayout>