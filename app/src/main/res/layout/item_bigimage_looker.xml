<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/pv_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.github.chrisbanes.photoview.PhotoView>

    <View
        android:id="@+id/view_splitor_item_bigimage"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#8000">
    </View>
    <TextView
        android:id="@+id/tv_index_item_bigimage"
        android:layout_below="@+id/view_splitor_item_bigimage"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#8000"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#fff"
        android:padding="5dp">

    </TextView>

    <TextView
        android:id="@+id/tv_title_item_bigimage"
        android:layout_above="@id/pv_item_image"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/pv_item_image"
        android:background="#8000"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#fff"
        android:padding="5dp"
        />


</RelativeLayout>