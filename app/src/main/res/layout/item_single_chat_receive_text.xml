<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_time_receive_text_singlechat_item"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="17:34">
    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_headic_receive_text_singlechat_item"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/tv_text_receive_text_singlechat_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_headic_receive_text_singlechat_item"
            android:background="@drawable/two"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:maxWidth="225.0dip"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:textColor="#ff000000"
            android:textSize="15sp">
        </TextView>

        <ImageView
            android:id="@+id/iv_state_receive_text_singlechat_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_text_receive_text_singlechat_item"
            android:clickable="true"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_state_receive_text_singlechat_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_text_receive_text_singlechat_item"
            android:textSize="12sp"
            android:visibility="invisible"
            />

    </RelativeLayout>



</LinearLayout>