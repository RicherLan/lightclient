<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/my_blue">

    </LinearLayout>
    <RelativeLayout
        android:background="@color/my_blue"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_gray"
            android:id="@+id/iv_back_up_personal_activity"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="21sp"
            android:text="修改资料"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_save_up_personal_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="保存"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/viewcolor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_username_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入不超过八位昵称"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="8"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_sex_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="8"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="家乡"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_hometown_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入您的家乡"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="20"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="所在地"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_location_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入现在居住在哪"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="20"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="职业"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_job_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入您的职业"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="20"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="生日"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tv_birth_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="10"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="星座"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/et_star_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:gravity="center_vertical|left"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="8"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="个人简介"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/et_introduce_up_personal_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入简介"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:maxLength="20"
                android:maxLines="1"
                android:minLines="1"
                android:background="@color/white"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/viewcolor"/>







</LinearLayout>