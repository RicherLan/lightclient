<resources>

    <style name="AppTheme.Personalinfo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#b5dbf7</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#b5dbf7</item>
        <item name="colorPrimaryDark">#b5dbf7</item>
        <item name="colorAccent">#b5dbf7</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#b5dbf7</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>


    <style name="BottomDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomDialog.Animation" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>



</resources>
